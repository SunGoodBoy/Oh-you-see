<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#020c36"
                android:endColor="#020c36"
                android:angle="270" />           
            <corners
                android:radius="4dp" />
        </shape>
    </item>
   <!-- focus -->
   <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#0031fa"
                android:endColor="#0030fa"
                android:angle="270" />            
            <corners
                android:radius="4dp" />
        </shape>
    </item>
<!-- default -->
    <item>        
        <shape>
            <gradient
                android:startColor="#0031fa"
                android:endColor="#0030fa"
                android:angle="0" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>