<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <CheckBox
            android:id="@+id/event_by_me_check_box_lost"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="true"
            android:layout_marginLeft="25dp"
            android:text="@string/lost_event"/>
        
        <!-- 分割线 -->
        <View 
            android:layout_width="1dp" 
			android:layout_height="match_parent" 
			android:background="#90909090" 
			android:layout_marginRight="1dp" 
			android:layout_marginLeft="1dp"/>
        
        <CheckBox
            android:id="@+id/event_by_me_check_box_found"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginLeft="25dp"
            android:text="@string/found_event"/>
        
    </LinearLayout>
    
    <!-- 分割线 -->
        <View 
            android:layout_width="match_parent" 
			android:layout_height="1dp" 
			android:background="#90909090" 
			android:layout_marginRight="1dp" 
			android:layout_marginLeft="1dp"/>
    
    <com.duang.easyecard.util.XListView 
        android:id="@+id/xListView_event_by_me"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:cacheColorHint="#00000000">
    </com.duang.easyecard.util.XListView>

</LinearLayout>
